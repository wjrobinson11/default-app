<div class="panel-body">
  <div class="row">
    <div class="col-lg-12">
      <h4>Change your password</h4>

      <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :put }) do |f| %>
        <%- if resource.errors.present? %>
          <div class='error-field'>
            <%= resource.errors.full_messages.join("<br />").html_safe %>
          </div>
        <% end %>
        <%= f.hidden_field :reset_password_token %>

        <div class="form-group">
          <%= f.label :password, "New password" %>
          <% if @minimum_password_length %>
            <em>(<%= @minimum_password_length %> characters minimum)</em>
          <% end %>
          <%= f.password_field :password, autofocus: true, autocomplete: "new-password", class: 'form-control', placeholder: "New password" %>
        </div>

        <div class="form-group">
          <%= f.label :password_confirmation, "Confirm new password" %>
          <%= f.password_field :password_confirmation, autocomplete: "new-password", class: 'form-control', placeholder: "Confirm new password" %>
        </div>

        <div class="actions">
          <%= f.submit "Change my password", class: 'form-control btn auth-submit' %>
        </div>
      <% end %>

      <%= render "devise/shared/links" %>
    </div>
  </div>
</div>
