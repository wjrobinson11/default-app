<%- content_for :head do %>
  <script src="https://widget.cloudinary.com/v2.0/global/all.js" type="text/javascript">  
  </script>
<% end %>

<div class='side-nav'>
	<ul>
		<li class='active'>
			<%= image_tag 'facebook-nav-icon' %>
			<br />
			Facebook
		</li>
		<li>
			<%= image_tag 'twitter-nav-icon' %>
			<br />
			Twitter
		</li>
		<li>
			<%= image_tag 'instagram-nav-icon' %>
			Instagram
		</li>
	</ul>
</div>

<div class='secondary-side-nav'>
	<ul>
		<li>
			<div class='secondary-side-nav-title'>Image Ad</div>
			<%= image_tag 'facebook-image-ad', class: 'ad-placeholder-img' %>
		</li>
		<li>
			<div class='secondary-side-nav-title'>Video Ad</div>
			<%= image_tag 'facebook-video-ad', class: 'ad-placeholder-img' %>
		</li>
		<li>
			<div class='secondary-side-nav-title'>Carousel Ad</div>
			<%= image_tag 'facebook-carousel-ad', class: 'ad-placeholder-img' %>
		</li>
		<li>
			<div class='secondary-side-nav-title'>Collection Ad</div>
			<%= image_tag 'facebook-collection-ad', class: 'ad-placeholder-img' %>
		</li>
	</ul>
</div>

<div class='main-container'>
	<nav class="navbar secondary-nav">
	  <div class='secondary-nav-title pull-left'>
	    New Ad
	  </div>
	  <div class="pull-right">
	    <%= link_to 'Save', new_ad_path, class: 'new-ad-btn btn btn-info btn-sm' %>
	  </div>
	</nav>

	<div class='main-content'>
		<div class='ad-content-box facebook'>
			<div class='ad-content-header'>
				<div class='ad-content-header-account-info'>
					<%= image_tag 'kia-logo', class: 'ad-content-logo' %>
					<div class='ad-content-header-name-sponsored-container pull-left'>
						<div class='ad-content-header-name'>Kia Latino</div>
						<%= image_tag 'facebook-sponsored-label', class: 'facebook-sponsored-label' %>
					</div>
				</div>
				<div class='ad-content-header-description'>
					<%= text_area_tag '', 'Unlock the power of', class: 'ad-header-description' %>
				</div>
			</div>
			<div class='ad-content-hero-image-container facebook'>
				<img src='' class='image-holder' />
				<%= link_to image_tag('upload-icon'), 'javascript:void(0);', class: 'upload-button' %>
			</div>
		</div>
	</div>
<!-- 	<%= render 'form', ad: @ad %>

	<%= link_to 'Back', ads_path %> -->
</div>

<script>
	$(document).ready(function(){
		$('.side-nav ul li').click(function(){
			$('.side-nav ul li.active').removeClass('active');
			$(this).addClass('active');
		})

    var widget = cloudinary.createUploadWidget({ 
      cloudName: "dt1oywox5", uploadPreset: "xrewfkny" }, (error, result) => {
        console.log(result);
        if(result.event === 'success') {
          console.log(result.info.secure_url);
          $('.image-holder').attr('src', result.info.secure_url);
        }
      });

    $('.upload-button').click(function(){
      widget.open();
    });
  });
</script>
